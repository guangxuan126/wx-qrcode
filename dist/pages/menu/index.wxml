<wxc-flex class="wrap" dir="top" _pid="{{_pid}}">
    <image class="logo_pic" src="../../images/logo.png"></image>
    <view class="logo_text">轻松地将任何数据转换成二维码</view>
    <view class="button">
        <button type="default" bindtap="toGenerate">
            <wxc-icon size="100%" type="edit" _pid="{{_pid}}"></wxc-icon> 生成二维码</button>
    </view>
    <view class="button">
        <button type="default" bindtap="toScan">
            <wxc-icon size="100%" type="scan" _pid="{{_pid}}"></wxc-icon> 扫描二维码</button>
    </view>
    <navigator target="miniProgram" open-type="navigate" app-id="wx8abaf00ee8c3202e" extra-data="{{ extraData }}" version="release">
        <view class="button">
            <button type="default">
                <wxc-icon size="100%" type="feedback" _pid="{{_pid}}"></wxc-icon> 反馈系统</button>
        </view>
    </navigator>
    <view class="ad">
        <ad unit-id="adunit-6df5733af157778b"></ad>
    </view>
</wxc-flex>