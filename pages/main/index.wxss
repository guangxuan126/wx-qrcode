

.container-box {
  background-color: #efeff4;
}

.img-box {
  padding: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.img-box image {
  width: 686rpx;
  height: 686rpx;
  background-color: #f9f9f9;
}

.input-row {
  margin: 30rpx auto;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  height: 450rpx;
  width: 80%;
  padding: 0 32rpx;
  background-color: #fff;
  font-size: 34rpx;
  color: #000;
}

.input-row input {
  margin-left: 100rpx;
  flex: 1;
}

.mybtn {
  width: 686rpx;
  margin: 40rpx auto;
}

.feedback {
  width: 686rpx;
  margin: 40rpx auto;
}

.ntext{
  background-color: #fff;  
  width: 686rpx;
  margin: auto auto;
  border-radius: 5px
}
.textdetail{
  font-size: 12px;
  color: #888888;
  margin: 5rpx;
}

.bc {
  width: 686rpx;
  height: 30%;
  margin: 0rpx auto;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}
